{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,  
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "Utils/*":  [
        "src/utils"
      ],
      "Components/*": [
        "src/components/*"
      ],
      "Providers/*": [
        "src/providers/*"
      ],
      "Store/*": [
        "src/store/*"
      ],
      "Src/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src"
  ]
}
